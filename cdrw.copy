#!/bin/sh

C=`basename $0`

error()
{
  printf "\nError:\n\nUso:\n\t$C <velocidad> [-f]\n\n-f=copia al vuelo\n\n"
  exit 1
}

if [ $# -lt 1 -o -$# -gt 2 ]
then
  error
fi

if [ $# -eq 2 ]
then
  if [ $2 == "-f" ]
  then
    F="--on-the-fly"
  else
    F=""
  fi
fi

cdrdao copy $F --speed $1 --device 0,0,0 --source-device 1,0,0 --driver generic-mmc --source-driver generic-mmc

