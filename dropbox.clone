#!/bin/bash

#dropbox.clone source-user dest-user...

if [ $# -lt 2 ]
then
  printf "Uso:\n\tUso: $0 source-user dest-user...\n\n"
  exit 1
fi

SRC=$1
HOME=`getent passwd $SRC | cut -d: -f6`

shift

for NEWUSER in $*
do
	HOMEDIR=`getent passwd $NEWUSER | cut -d: -f6`
	GROUP=`getent passwd $NEWUSER | cut -d: -f4`
	cp -R $HOME/.dropbox-dist $HOMEDIR
	chown -R $NEWUSER $HOMEDIR/.dropbox-dist
	chgrp -R $GROUP $HOMEDIR/.dropbox-dist
done
