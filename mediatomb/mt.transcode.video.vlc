AUDIO_BITRATE=""
AUDIO_SAMPLERATE="44100"
AUDIO_CHANNELS="2"
FORMAT="ps"
SUBTITLE_LANGUAGE="eng"


#samplerate=${AUDIO_SAMPLERATE},channels=${AUDIO_CHANNELS},deinterlace,soverlay,audio-sync}:\

