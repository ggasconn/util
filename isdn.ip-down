#!/bin/sh

/bin/echo "Eliminando ruta por defecto..."
/sbin/route del default
/bin/echo "Desactivando el interfaz ippp0..."
/sbin/ifconfig ippp0 down
/bin/echo "Configurando el interfaz ippp0..."
/sbin/ifconfig ippp0 195.176.154.169
/bin/echo "Añadiendo ruta para ippp0..."
/sbin/route add -net 195.176.154.0 netmask 255.255.255.0 dev ippp0
/bin/echo "Configurando ruta por defecto..."
/sbin/route add default ippp0
/bin/echo "Fin"
