#Comprobar si el CD-ROM esta montado ya
R=`mount | grep /dev/scd0 | wc -l`
if [ $R -eq 1 ]
then
  echo "Desmontando el CD-ROM..."
  umount /dev/cdrom
  echo "Informe mount:_______________________________________________________"
  mount
  echo "Informe df:__________________________________________________________"
  df -v
else
  echo "Montando el CD-ROM..."
  echo "Informe mount:_______________________________________________________"
  mount /dev/cdrom /mnt/cdrom
  mount
  echo "Informe df:__________________________________________________________"
  df -v
fi
