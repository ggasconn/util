#!/bin/bash

################################################################################
# git.commit
################################################################################
# commit changes
################################################################################

if [ $# -eq 0 ]
then
  printf "\n\nUsage:\n\t$0 [dir...]\n\n"
  exit 1
fi



if [ $# -eq 0 ]
then
  git commit
else
for D in $*
do
      cd $D
      git commit
done
fi
