#Comprobar si el /dev/fd0 esta montado ya
R=`mount | grep /dev/fd0 | wc -l`
if [ $R -eq 1 ]
then
  echo "Desmontando el /dev/fd0..."
  umount /dev/fd0
  echo "Informe mount:_______________________________________________________"
  mount
  echo "Informe df:__________________________________________________________"
  df -v
else
  echo "Montando el /dev/fd0..."
  echo "Informe mount:_______________________________________________________"
  mount -t msdos /dev/fd0 /mnt/floppy
  mount
  echo "Informe df:__________________________________________________________"
  df -v
fi
